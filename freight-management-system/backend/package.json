{
  "name": "freight-management-backend",
  "version": "1.0.0",
  "description": "Backend API for Freight Management System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "start:desktop": "cross-env DATABASE_PROVIDER=sqlite DATABASE_URL=file:./data/freight.db node src/server.js",
    "dev:desktop": "cross-env DATABASE_PROVIDER=sqlite DATABASE_URL=file:./data/freight.db nodemon src/server.js",
    "configure": "node scripts/configureSystem.js",
    "backup:sqlite": "cross-env DATABASE_PROVIDER=sqlite DATABASE_URL=file:./data/freight.db node scripts/backupSqlite.js",
    "restore:sqlite": "cross-env DATABASE_PROVIDER=sqlite DATABASE_URL=file:./data/freight.db node scripts/restoreSqlite.js",
    "prisma:generate": "npx prisma generate",
    "prisma:prepare-sqlite": "node scripts/prepareSqliteSchema.js",
    "prisma:generate:sqlite": "npm run prisma:prepare-sqlite && npx prisma generate --schema prisma/schema.sqlite.prisma",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:migrate:sqlite": "npm run prisma:prepare-sqlite && npx prisma migrate dev --schema prisma/schema.sqlite.prisma",
    "prisma:studio": "prisma studio",
    "test": "jest"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "keywords": [
    "freight",
    "logistics",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.13.0",
    "@prisma/client": "^5.7.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bonjour-service": "^1.2.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "escape-html": "^1.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.3.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "openai": "^6.3.0",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.13.0",
    "redis": "^5.10.0",
    "twilio": "^4.22.0",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0"
  }
}
